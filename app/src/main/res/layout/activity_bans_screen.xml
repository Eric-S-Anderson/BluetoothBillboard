<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.seniordesign.bluetoothbillboard.bans_screen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bans Screen"
        android:id="@+id/textView8"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="42dp"
            android:layout_height="fill_parent"
            android:text="View"
            android:id="@+id/btnView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="8dp"
            android:onClick="intentViewPostListScreen"
            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="42dp"
            android:layout_height="fill_parent"
            android:text="Post"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="8dp"
            android:onClick="intentPost" />

        <Button
            android:layout_width="42dp"
            android:layout_height="fill_parent"
            android:text="Boards"
            android:id="@+id/button2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="8dp"
            android:onClick="intentSavedBoards" />

        <Button
            android:layout_width="42dp"
            android:layout_height="fill_parent"
            android:text="Posts"
            android:id="@+id/button3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="8dp"
            android:onClick="intentSavedPosts" />

        <Button
            android:layout_width="42dp"
            android:layout_height="fill_parent"
            android:text="Search"
            android:id="@+id/button4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="8dp"
            android:onClick="intentSearch" />

        <Button
            android:layout_width="42dp"
            android:layout_height="fill_parent"
            android:text="Login"
            android:id="@+id/button5"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="8dp"
            android:onClick="intentLogin" />

        <Button
            android:layout_width="42dp"
            android:layout_height="fill_parent"
            android:text="Boards"
            android:id="@+id/button6"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="8dp"
            android:onClick="intentViewBoardList" />

        <Button
            android:layout_width="42dp"
            android:layout_height="fill_parent"
            android:text="Bans"
            android:id="@+id/button7"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="8dp"
            android:onClick="intentBans" />
    </LinearLayout>
</RelativeLayout>
