<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.seniordesign.bluetoothbillboard.view_queued_post_screen">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRow2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/button_deny_post"
            android:id="@+id/btnDeny"
            android:onClick="onClick_btnDeny" />

        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/button_accept_post"
            android:id="@+id/btnAccept"
            android:onClick="onClick_btnAccept" />
    </TableRow>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_contact_details"
        android:id="@+id/ckbDetails"
        android:checked="false"
        android:layout_above="@+id/tableRow2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_host"
        android:id="@+id/lblHost"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txvDetails"
        android:layout_gravity="center_vertical"
        android:text="@string/text_overlay_details"
        android:layout_below="@+id/lblHost"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/scvDetails" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/scvDetails"
        android:fillViewport="false"
        android:visibility="invisible"
        android:layout_above="@+id/ckbDetails"
        android:layout_centerHorizontal="true">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="2"
            android:id="@+id/gridLayout" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/txtEmail"
                android:layout_row="0"
                android:layout_column="1"
                android:text="@string/text_overlay_email"
                android:inputType="none"
                android:textIsSelectable="true"
                android:lines="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/txtPhone"
                android:layout_column="1"
                android:layout_row="1"
                android:text="@string/text_overlay_phone"
                android:inputType="none"
                android:textIsSelectable="true"
                android:lines="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/txtAddress"
                android:layout_column="1"
                android:layout_row="2"
                android:text="@string/text_overlay_address"
                android:inputType="none"
                android:textIsSelectable="true"
                android:lines="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_email"
                android:id="@+id/lblEmail"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_phone"
                android:id="@+id/lblPhone"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_address"
                android:id="@+id/lblAddress"
                android:layout_row="2"
                android:layout_column="0" />

        </GridLayout>
    </ScrollView>
    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wbvWeb"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/lblHost"
        android:text="@string/text_overlay_details"
        android:layout_alignBottom="@+id/scvDetails"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
